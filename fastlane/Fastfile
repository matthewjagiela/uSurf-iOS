platform :ios do
  lane :test do
    # Run unit tests
    run_tests(scheme: "uSurfTests")
  end

  lane :TestFlightDeployment do
    puts "APP_STORE_CONNECT_API_KEY_ID: #{ENV['APP_STORE_CONNECT_API_KEY_ID']}"
    puts "APP_STORE_CONNECT_API_KEY_ISSUER_ID: #{ENV['APP_STORE_CONNECT_API_KEY_ISSUER_ID']}"
    puts "APP_STORE_CONNECT_API_KEY: #{ENV['APP_STORE_CONNECT_API_KEY']}"
    puts "APP_STORE_CONNECT_USERNAME: #{ENV['APP_STORE_CONNECT_USERNAME']}"
    puts "APP_STORE_CONNECT_TEAM_ID: #{ENV['APP_STORE_CONNECT_TEAM_ID']}"

    # Use the certificate-help repository for Match
    api_key = app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_API_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_API_KEY_ISSUER_ID"],
      key_content: ENV["APP_STORE_CONNECT_API_KEY"],
      duration: 1200, # optional (maximum 1200)
      in_house: false, # optional but may be required if using match/sigh
    )
    
    match(
      type: "appstore",
      git_url: "git@github.com:matthewjagiela/certificate-help.git",
      app_identifier: "com.uapps.uSurf",
      username: ENV["APP_STORE_CONNECT_USERNAME"],
      team_id: ENV["APP_STORE_CONNECT_TEAM_ID"],
      api_key: api_key,
    )

    # Get version number and build number from Info.plist
    version_number = get_version_number(xcodeproj: "uSurf.xcodeproj")
    build_number = get_build_number(xcodeproj: "uSurf.xcodeproj")

    # Get the latest build number from App Store Connect
    latest_build_number = latest_testflight_build_number(
      app_identifier: "com.uapps.uSurf",
      api_key: api_key
    )

    # Increment build number if the latest build number from App Store Connect is greater than the current build number
    build_number = latest_build_number.to_i + 1 if latest_build_number.to_i > build_number.to_i

    # Update version number and build number in Info.plist
    increment_version_number(xcodeproj: "uSurf.xcodeproj")
    increment_build_number(xcodeproj: "uSurf.xcodeproj", build_number: build_number)

    # Print version number and build number obtained from API
    puts "Version number from API: #{version_number}"
    puts "Build number from API: #{build_number}"

    # Build the app for the App Store
    gym(
      scheme: "uSurf",
      export_method: "app-store",
      output_directory: "output",
      output_name: "uSurf.ipa"
    )
    
    upload_to_testflight(
      api_key: api_key,
      skip_submission: true,
      ipa: "output/uSurf.ipa",
      skip_waiting_for_build_processing: true,
    )
  end
end
